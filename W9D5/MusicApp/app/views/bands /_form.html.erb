<% action = (band.persisted? ? band_url(band) : bands.url) %>
<% method = (band.persisted? ? :PATCH : :POST) %>

<form action="<%= action%>" method="POST">
  <input type="hidden" name="_method" value="<%= method %>">
  <%= auth_token %>

  <label for="band_name">Name:</label>
  <input type="text" name="band[name]" id="band_name" value="<%= band.name %>">
  <br>
  <% submit_text = (cat.persisted? ? 'Update' : 'Add') + ' Band!' %>
  <input type="submit" value="<%= submit_text %>">
</form>  
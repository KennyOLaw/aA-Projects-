<!DOCTYPE html>
<html>
  <head>
    <title>MusicHeads</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="main-nav">
    <h1>Music Heads</h1>
    <div>
    <% if current_user.nil? %> 
      <a href="<%= new_session_url%>">Log in</a>
      <a href="<%= new_user_url%>">Sign up</a>
    <% else %>
      <%= current_user.email %>
      <form actio="<%= sessio_url %>" method="post">
        <%= auth_token %>
        <input type="hidden" name="_method" value="delete">
        <input type="hidden" value="Logout">
      </form>
    <%end %> 
    </div>
    </nav>
    <main>
    <%= yield %>
    </main>
  </body>
  <footer>
    Only the best for music heads!
    <%= yield :footer %>
  </footer>
</html>
